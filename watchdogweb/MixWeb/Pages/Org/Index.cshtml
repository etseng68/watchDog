@model MixWeb.Pages.Org.IndexModel

@{
    ViewData["Title"] = "Index";
    ViewData["Page"] = "org/index";
    ViewData["Group"] = "orgGroup";
    ViewData["user"] = this.User;
}
<div class="card-box mb-30">
    <div class="pd-20">
        <h4 class="text-blue h4">商戶管理</h4>
       
    </div>
    <div class="pb-20 p-3">
		<p><a asp-page="Create">建立商戶</a></p>
        <table class="checkbox-datatable table nowrap">
            <thead>
                <tr>
                    <th>商戶</th>
                    <th>停用</th>
                    <th>TG Bot</th>
                    <th>備註</th>
                    <th>功能</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Morg)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Org)</td>
                        <td>@Html.DisplayFor(modelItem => item.Disable) </td>
                        <td>@Html.DisplayFor(modelItem => item.Tgbot) </td>
                        <td>@Html.DisplayFor(modelItem => item.Note)</td>
						<td>
							<a asp-page="./Edit" asp-route-id="@item.Id" ><i class="dw dw-edit2"></i>修改</a> 
						@*	| <a asp-page="./Delete" asp-route-id="@item.Id"><i class="dw dw-delete-3"></i>刪除</a>*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
